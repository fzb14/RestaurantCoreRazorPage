@page "{id:int?}"
@model CoreWebApplication1.Pages.Restaurants.editModel
@{
}

<h2>Editing @Model.Restaurant.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input class="form-control" asp-for="Restaurant.Name" />
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.CType"></label>
        <select class="form-control" asp-for="Restaurant.CType" asp-items="Model.cuisines">
        </select>
        <span class="text-danger" asp-validation-for="Restaurant.CType"></span>
    </div>
    <button type="submit" class="btn btn-dark">save</button>
</form>
